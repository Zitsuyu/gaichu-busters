
<div class="card col-sm-5 mx-auto mt-5">
  <div class="card-body">
    <h2 class="mt-1 mb-3">ユーザーログイン</h2>
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>

      <div class="form-group">
        <%= f.label :email, "メールアドレス", :class => "form-label" %><br />
        <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email", :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード（6文字以上）", :class => "form-label" %><br />
        <%= f.password_field :password, id:"user_password", autocomplete: "current-password", :class => "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", :class => "btn btn-warning" %>
      </div>
    <% end %>
  </div>
</div>