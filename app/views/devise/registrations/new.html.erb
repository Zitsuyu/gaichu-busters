
<div class="card col-sm-5 mx-auto mt-5">
  <div class="card-body">
    <h2 class="mt-1 mb-3">新規登録</h2>
      <%= form_with model:@user, url: user_registration_path, local: true do |f| %>
      
      <div class="form-group">
        <%= f.label :name, "ユーザー名", :class => "form-label" %><br />
        <%= f.text_field :name, id:"user_name", autofocus: true, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email, "メールアドレス", :class => "form-label" %><br />
        <%= f.email_field :email, id:"user_email", autocomplete: "email", :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード（6文字以上）", :class => "form-label" %><br />
        <%= f.password_field :password, id:"user_password", autocomplete: "new-password", :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "パスワード再入力", :class => "form-label" %><br />
        <%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "new-password", :class => "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", :class => "btn btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
</div>